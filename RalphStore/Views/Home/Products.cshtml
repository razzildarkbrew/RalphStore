@model IEnumerable<RalphStore.Models.ProductModel>
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<div class="container">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="well">
                    <h2>@Model.ElementAt(i).Name</h2>
                    <p>@Model.ElementAt(i).Description</p>
                </div>
            </div>
        </div>
        <div class="row">
            @for (int j = 0; j < Model.ElementAt(i).Products.Count(); j++)
            {
                <div class="col-xs-4">
                    <div class="panel">
                        <div class="panel-heading">
                            <h3>@Model.ElementAt(i).Products.ElementAt(j).Name</h3>
                        </div>
                        <div class="panel-body">
                            <p>
                                <img style="max-width:100%; max-height:100%" src="@Model.ElementAt(i).Products.ElementAt(j).Images.FirstOrDefault()" />
                            </p>
                            <p>
                                @Html.ActionLink("View", "Index", "Product", new { ID = Model.ElementAt(i).Products.ElementAt(j).ID }, new { @class = "btn btn-default" })
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>



